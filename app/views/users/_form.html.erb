<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>

<div class="first_name-field">
  <%= form.label :first_name %>
  <%= form.text_field :first_name %>
</div>

<div class="last_name-field">
  <%= form.label :last_name %>
  <%= form.text_field :last_name %>
</div>

<div class="birthdate-field">
  <%= form.label :birthdate %>
  <%= form.date_select :birthdate, start_year: Date.today.year - 100, end_year: Date.today.year %>
</div>

<div>
  <%= button_to 'Sign up with Facebook', '/auth/facebook'%>
</div>
